@model List<Writer>



<div class="d-flex justify-content-end my-3 container"><a asp-action="AddCategory" asp-area="Admin" asp-controller="Category" class="btn btn-primary"><i class="fa-solid fa-plus"></i> New Category</a> </div>

<table class="table table-hover container">
    <thead>
    <th>Id</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Nickname</th>
    <th>E-Mail</th>
    <th>Operasyonlar</th>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WriterId</td>
                <td>@item.WriterFirstName</td>
                <td>@item.WriterLastName</td>
                <td>@item.WriterNickname</td>
                <td>@item.WriterEmail</td>
                <td>
                    <div class="btn btn-group">


                        <a asp-action="DeleteWriter" asp-area="Admin" asp-controller="Writer" asp-route-id="@item.WriterId" class="btn btn-danger"> Remove <i class="fa-solid fa-trash"></i></a>


                    </div>
                </td>
            </tr>
        }

    </tbody>


</table>