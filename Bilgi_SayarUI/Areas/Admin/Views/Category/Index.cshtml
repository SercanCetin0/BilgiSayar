@using Entities.Concrete

@model List<Category>

@{
  
}

<div class="d-flex justify-content-end my-3 container"><a asp-action="AddCategory" asp-area="Admin" asp-controller="Category" class="btn btn-primary"><i class="fa-solid fa-plus"></i> New Category</a> </div>

<table class="table table-hover container">
    <thead>
    <th>Id </th>
    <th>Name</th>
    <th>Operations</th>


    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <div class="btn btn-group">


                        <a class="btn btn-warning" asp-action="UpdateCategory" asp-area="Admin" asp-controller="Category" asp-route-id="@item.CategoryId"><i class="fa-solid fa-recycle"></i> Update</a>

                        <a asp-action="DeleteCategory" asp-area="Admin" asp-controller="Category" asp-route-id="@item.CategoryId" class="btn btn-danger"> Remove <i class="fa-solid fa-trash"></i></a>


                    </div>
                </td>
            </tr>
        }

    </tbody>


</table>

