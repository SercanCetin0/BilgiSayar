@model Writer



<section class="section about-section gray-bg" id="about">
  
    
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            
            <div class="col-lg-9">
                <div class="about-text go-to">
                    <h3 class="dark-color">@Model?.WriterNickname</h3>
                    <h6 class="theme-color lead">Editor 
                        @if (User.IsInRole("Admin"))
                        {
                            <p>Admin</p>
                        }
                        
                    </h6>
                    <p>Ben <mark>@Model.WriterFirstName  @Model.WriterLastName</mark>   @Model.WriterBio  </p>
                    <div class="row about-list">
                        
                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail</label>
                                <p>@Model?.WriterEmail</p>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="about-avatar">
                    <img src="~/image/ProfileImage/@Model?.WriterImage" >
                </div>
            </div>
        </div>
        <div class="counter">

            @await Component.InvokeAsync("EditorControl")
    
         
            
        </div>
    </div>
    
   
</section>
